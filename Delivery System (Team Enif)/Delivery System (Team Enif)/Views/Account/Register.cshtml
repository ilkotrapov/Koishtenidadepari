@model RegisterViewModel
@{
    ViewData["Title"] = "Sign in";
}
<div class="delivery-form">
    <h1>Sign in</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Select Role</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Role" id="roleUser" value="User" asp-for="Role" checked />
                <label class="form-check-label" for="roleUser">
                    User
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Role" id="roleCourier" value="Courier" asp-for="Role" />
                <label class="form-check-label" for="roleCourier">
                    Courier
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Role" id="roleOfficeAssistant" value="Office assistant" asp-for="Role" />
                <label class="form-check-label" for="roleOfficeAssistant">
                    Office Assistant
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>

    <div>
        <p>Already have an account? <a href="/Account/Login">Log in</a></p>
    </div>
</div>