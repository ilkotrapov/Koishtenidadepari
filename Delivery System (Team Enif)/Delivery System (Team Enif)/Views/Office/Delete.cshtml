@model OfficeViewModel

@{
    ViewData["Title"] = "Delete";
    var isAdmin = User.IsInRole("Admin");
}

@if (isAdmin)
{
<div class="card mb-4 shadow-sm">
    <div class="card-header">
        <h6 class="display-6 text-center text-danger">Are you sure you want to delete the office details?</h6>
    </div>

    <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ContactInfo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ContactInfo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.WorkingHours)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.WorkingHours)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i>Cancel
            </a>
        </form>
    </div>
</div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
