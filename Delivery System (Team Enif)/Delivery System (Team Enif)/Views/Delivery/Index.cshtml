@model PackageViewModel

@{
    ViewData["Title"] = "Deliveries";
}

<div class="delivery-form">
    <h1>Deliveries</h1>

    <div>
        <button asp-action="Create">New Package</button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                   ID
                </th>
                <th>
                    Delivery Date
                </th>
                <th>
                    DeliveryType
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Packages) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div>
                            <button asp-action="Edit" asp-route-id="@item.Id">Edit</button> |
                            <button asp-action="Details" asp-route-id="@item.Id">Details</button> |
                            <button asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                    </div>
                    
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
