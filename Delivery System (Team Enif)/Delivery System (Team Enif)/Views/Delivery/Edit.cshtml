@model DeliveryViewModel

@{
    ViewData["Title"] = "Edit Delivery";
    var isAdmin = User.IsInRole("Admin");
    var isOfficeAssistant = User.IsInRole("Office assistant");
}

@if (isAdmin || isOfficeAssistant)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="display-4 text-center text-primary">Edit Delivery</h4>
        </div>

        <div class="row card-body">
            <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="PackageId" class="control-label"></label>
                    <input asp-for="PackageId" class="form-control" />
                    <span asp-validation-for="PackageId" class="text-danger"></span>
                </div>

                    <div class="form-section">
                        <div class="form-group">
                            <label asp-for="CourierId" class="control-label"></label>
                            <select asp-for="CourierId" class="form-control" asp-items="ViewBag.CourierId">
                                <option value="">-- Select Courier --</option>
                            </select>
                            <span asp-validation-for="CourierId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PickupTime" class="control-label"></label>
                            <input asp-for="PickupTime" class="form-control" />
                            <span asp-validation-for="PickupTime" class="text-danger"></span>
                        </div>
                    </div>

                <div class="form-group">
                    <label asp-for="DeliveryTime" class="control-label"></label>
                    <input asp-for="DeliveryTime" class="form-control" />
                    <span asp-validation-for="DeliveryTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryOptionId" class="control-label"></label>
                    <select asp-for="DeliveryOptionId" class="form-control" asp-items="ViewBag.DeliveryOptions">
                        <option value="">-- Select Delivery Option --</option>
                    </select>
                    <span asp-validation-for="DeliveryOptionId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryTypeId" class="control-label"></label>
                    <select asp-for="DeliveryTypeId" class="form-control" asp-items="ViewBag.DeliveryTypes">
                        <option value="">-- Select Delivery Type --</option>
                    </select>
                    <span asp-validation-for="DeliveryTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryStatusId" class="control-label"></label>
                    <select asp-for="DeliveryStatusId" class="form-control" asp-items="ViewBag.DeliveryStatuses">
                        <option value="">-- Select Delivery Status --</option>
                    </select>
                    <span asp-validation-for="DeliveryStatusId" class="text-danger"></span>
                </div>

                    <div class="card-footer text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i>Cancel
                        </a>
                    </div>
            </form>
        </div>
    </div>
    </div>
}
else
{
    {
        var url = Url.Action("Users", "Account");
    }
    <script>
        window.location.href = "url";
    </script>

}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }